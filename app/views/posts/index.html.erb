<h1>Posts</h1>

<% @posts.each do |p| %>
  <article class="post">
    <section class="post-head">
      <h2><%= link_to p.title, post_path(p) %></h2>

      <small>
        <time><%= p.created_at.to_date.strftime("%d.%m.%Y") %></time>
        |
        <%= link_to 'Edit', edit_post_path(p) %>
        |
        <%= link_to 'Delete', post_path(p), method: :delete, data: { confirm: 'Are you sure ?' } %>
      </small>
    </section>

    <section class="post-summary">
      <%= p.summary %>
    </section>
  </article>
<% end %>